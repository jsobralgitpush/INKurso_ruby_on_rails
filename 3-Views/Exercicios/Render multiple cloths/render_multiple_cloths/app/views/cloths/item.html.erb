<%= render 'header' %>



<% @results.each do |cloth| %>

  <div class="media">
  <%= image_tag( cloth.url) %>
  <div class="media-body">

    <div class="container">
      <div class="row align-items-center">

        <div class='col'>

            <br>
            <br>
            <h5 class="mt-1"> História</h5>
            <p 
              style=
              "font-family: Comic Sans MS, cursive, sans-serif;
              color: gray
              "
            >
            Camiseta muito irada que eu fiz pensando nela. O resto do texto é só ilustrativo
            Camiseta muito irada que eu fiz pensando nela. O resto do texto é só ilustrativo
            Camiseta muito irada que eu fiz pensando nela. O resto do texto é só ilustrativo
            </p>
            <div class="container">
              <div class="row">
                <div class="col-sm">
                </div>
                <div class="col-sm" style="font-family: DejaVu Sans Mono, monospace">
                Fulano de Tal
                </div>
                <div class="col-sm">
                </div>
              </div>
            </div>



        
            <h5 class="mt-0"> Entrega </h5>
            <%= form_tag(search_page_cloth_path, :method => "get",  class: 'navbar-form navbar-left') do %>  
              <div class="input-group">  
                <%= search_field_tag :search, params[:search], placeholder: "Digite seu CEP", class: "form-control" %>  
                <div class="input-group-btn">  
                  <%= button_tag "Procurar", :class => 'btn btn-light',:name => nil%>  
                </div>  
              </div>  
            <% end %>
     

            <br>

            <h5 class="mt-0"> Cor</h5>   
       
   
            <% @stocks_uniq_color.each do |stock| %>
              <div class="col col-lg-2">
                <%= link_to cloth_color_path(cloth.id, stock[0]) do %>
                  <button type="button" class="btn btn-outline-dark"><%= stock[0] %></button>
                <% end %>
              </div>
              <br>
            <% end %>

            <br>
            <br>
            <% if @var_test == 1 %>
              <h5 class="mt-0"> Selecione a cor que o tamanho estará disponível :)</h5>
            <% end %>

            <% if @var_test == 0 %>
              <h5> Lamentamos, mas a peça está fora dos estoques :( </h5>
            <% end %>


            
   

    
        </div>
      </div>
    </div>
        
  </div>
</div>

<% end %>

