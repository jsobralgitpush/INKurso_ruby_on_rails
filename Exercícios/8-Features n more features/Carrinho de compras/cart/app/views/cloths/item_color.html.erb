<%= render 'header' %>



<% @results.each do |cloth| %>

  <div class="media">
  <%= image_tag( cloth.url) %>
  <div class="media-body">

    <div class="container">
      <div class="row align-items-center">

        <div class='col'>

            <br>
            <br>
            <h5 class="mt-1"> História</h5>
            <p 
              style=
              "font-family: Comic Sans MS, cursive, sans-serif;
              color: gray
              "
            >
            Camiseta muito irada que eu fiz pensando nela. O resto do texto é só ilustrativo
            Camiseta muito irada que eu fiz pensando nela. O resto do texto é só ilustrativo
            Camiseta muito irada que eu fiz pensando nela. O resto do texto é só ilustrativo
            </p>
            <div class="container">
              <div class="row">
                <div class="col-sm">
                </div>
                <div class="col-sm" style="font-family: DejaVu Sans Mono, monospace">
                Fulano de Tal
                </div>
                <div class="col-sm">
                </div>
              </div>
            </div>



        
            <h5 class="mt-0"> Entrega </h5>
            <%= form_tag(search_page_cloth_path, :method => "get",  class: 'navbar-form navbar-left') do %>  
              <div class="input-group">  
                <%= search_field_tag :search, params[:search], placeholder: "Digite seu CEP", class: "form-control" %>  
                <div class="input-group-btn">  
                  <%= button_tag "Calcular Frete", :class => 'btn btn-light',:name => nil%>  
                </div>  
              </div>  
            <% end %>
     

            <br>

            <h5 class="mt-0"> Cor</h5>   
            <p><%= @cloth_color %></p>


            <h5 class="mt-0"> Tamanho</h5>
            <%= form_for :stock, url: cloth_discount_path(@cloth_id, @cloth_color)  do |f| %>
              <p>
                <%= f.select :tamanho, options_for_select(@stocks.map{|s|[s.tamanho]}.uniq) %>
              </p>
            <% end %>

            <%= link_to cloth_cart_path(cloth.id) do %>
              <button class="btn btn-dark">Comprar</button>
            <% end %>
    
        </div>
      </div>
    </div>
        
  </div>
</div>

<% end %>

